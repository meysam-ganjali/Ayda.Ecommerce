@model Ayda.Ecommerce.ShareModels.Carts.CartDto
@{
    int totalRowSum = 0;
    int totalSum = 0;
    ViewData["Title"] = "سبد خرید";
}
<div class="ship-process padding-top-30 padding-bottom-30">
    <div class="container">
        <ul class="row">
            <!-- Step 1 -->
            <li class="col-sm-3 current">
                <div class="media-left"> <i class="flaticon-shopping"></i> </div>
                <div class="media-body">
                    <span>مرحله 1</span>
                    <h6>سبد خرید</h6>
                </div>
            </li>

            <!-- Step 2 -->
            <li class="col-sm-3">
                <div class="media-left"> <i class="flaticon-business"></i> </div>
                <div class="media-body">
                    <span>مرحله 2</span>
                    <h6>روش های پرداخت</h6>
                </div>
            </li>

            <!-- Step 3 -->
            <li class="col-sm-3">
                <div class="media-left"> <i class="flaticon-delivery-truck"></i> </div>
                <div class="media-body">
                    <span>مرحله 3</span>
                    <h6>روش های تحویل</h6>
                </div>
            </li>

            <!-- Step 4 -->
            <li class="col-sm-3">
                <div class="media-left"> <i class="fa fa-check"></i> </div>
                <div class="media-body">
                    <span>مرحله 4</span>
                    <h6>تائیدیه</h6>
                </div>
            </li>
        </ul>
    </div>
</div>
<section class="shopping-cart padding-bottom-60">
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>موارد</th>
                    <th class="text-center">قیمت</th>
                    <th class="text-center">مقدار</th>
                    <th class="text-center">جمع کل </th>
                    <th>&nbsp; </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null) {
                    foreach (var p in Model.CartItems) {
                        <tr>
                            <td>
                                <div class="media">
                                    <div class="media-left"> <a href="#."> <img class="img-responsive" src="~/@p.Product.ImageCoverPath.Trim('\\')" alt=""> </a> </div>
                                    <div class="media-body">
                                        <p>
                                          @p.Product.Name
                                        </p>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center padding-top-60">@p.Product.Price.ToString("#,##") تومان</td>
                            <td class="text-center">
                                <!-- Quinty -->

                                <div class="quinty padding-top-20">
                                    <input type="number" value="@p.Count">
                                </div>
                            </td>
                            @{
                                totalRowSum = p.Product.Price * p.Count;
                            }
                            <td class="text-center padding-top-60">@totalRowSum.ToString("#,##") تومان</td>
                            <td class="text-center padding-top-60"><a href="#." class="remove"><i class="fa fa-close"></i></a></td>
                            @{
                                totalSum += totalRowSum;
                            }
                        </tr>
                    }
                }
                else
                {
                        <p >
                            محصولی در سبد شما یافت نشد
                        </p>
                }
            </tbody>
        </table>

        <!-- Promotion -->
        <div class="promo">
            <div class="coupen">
                <label>
                    کد تبلیغاتی
                    <input type="text" placeholder="کد شما اینجاست">
                    <button type="submit"><i class="fa fa-arrow-circle-right"></i></button>
                </label>
            </div>

            <!-- Grand total -->
            <div class="g-totel">
                <h5>مجموع کل: <span>@totalSum.ToString("#,##") تومان</span></h5>
            </div>
        </div>

        <!-- Button -->
        <div class="pro-btn"> <a href="#." class="btn-round btn-light">ادامه خرید</a> <a href="#." class="btn-round">برو روش پرداخت</a> </div>
    </div>
</section>