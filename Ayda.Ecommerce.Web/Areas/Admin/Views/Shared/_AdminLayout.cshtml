<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>فروشگاه آیده مدیریت |@ViewData["Title"] </title>
    <!-- Favicon-->
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">
    <!-- Plugins Core Css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet">
    <link href="~/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/js/bundles/materialize-rtl/materialize-rtl.min.css" rel="stylesheet">
    <!-- Custom Css -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <!-- Theme style. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/assets/css/styles/all-themes.css" rel="stylesheet" />
    
</head>

<body class="light rtl">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30">
                <img class="loading-img-spin" src="~/assets/images/loading.png" alt="admin">
            </div>
            <p>لطفا صبر کنید...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <partial name="_AdminTopBar" />
    <div>
        <partial name="_LeftAside" />
        <partial name="_RightAside" />
    </div>
    <section class="content">
        <div class="container-fluid">
           @RenderBody()

        </div>
    </section>
    <!-- Plugins Js -->
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/js/chart.min.js"></script>
    <!-- Custom Js -->
    <script src="~/assets/js/admin.js"></script>
    <script src="~/assets/js/bundles/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/js/pages/index.js"></script>
    @await RenderSectionAsync("Scripts",false)
    @await RenderSectionAsync("Modals",false)
</body>
