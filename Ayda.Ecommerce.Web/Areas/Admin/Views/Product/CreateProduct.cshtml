@model Ayda.Ecommerce.ShareModels.EcommerceDto.Product.CreateProductDto
<div class="block-header">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ul class="breadcrumb breadcrumb-style ">
                <li class="breadcrumb-item">
                    <h4 class="page-title">ثبت محصول جدید</h4>
                </li>
                <li class="breadcrumb-item bcrumb-1">
                    <a href="/admin/home/index">
                        <i class="fas fa-home"></i> خانه
                    </a>
                </li>
                <li class="breadcrumb-item bcrumb-2">
                    <a href="//admin/product/index" onclick="return false;">محصولات</a>
                </li>
                <li class="breadcrumb-item active">ثبت محصول</li>
            </ul>
        </div>
    </div>
</div>
<form method="post" action="/Admin/Product/CreateProduct" enctype="multipart/form-data">
<div class="row clearfix">
    
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
            <div class="card">
                <div class="body">

                    <div class="row clearfix">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <div class="form-line">
                                    <label>نام محصول</label>
                                    <input type="text" class="form-control" asp-for="Name" placeholder="نام محصول">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>دسته بندی</label>
                                    <select  class="browser-default select2" asp-items="@ViewBag.Category" asp-for="CategoryId">
                                      
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>نمایش در خانه</label>
                                    <select  class="browser-default" asp-for="ShowOnHomepage">
                                        <option value="true">نمایش بده</option>
                                        <option value="false">نمایش نده</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>اجازه نظر</label>
                                    <select  class="browser-default" asp-for="AllowCustomerComment">
                                        <option value="true">دارد</option>
                                        <option value="false">ندارد</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>نحوه نمایش</label>
                                    <select  class="browser-default" asp-for="IsShow">
                                        <option value="true">نمایش </option>
                                        <option value="false">مخفی</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>دارای تخفیف</label>
                                    <select  class="browser-default" asp-for="IsDiscount">
                                        <option value="true">تخفیف داد</option>
                                        <option value="false">تخفیف ندارد</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>متن لیبیل تخفیف</label>
                                    <input type="text" class="form-control" asp-for="DiscountLableText" placeholder="اگر محصول دارای تخفیف است">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>قیمت</label>
                                    <input type="number" class="form-control" asp-for="Price" placeholder="قیمت محصول به تومان">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>امتیاز </label>
                                    <input type="number" class="form-control" asp-for="Rate" placeholder="نام محصول">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>محصول ویژه</label>
                                    <select  class="browser-default" asp-for="IsSotialProduct">
                                        <option value="بشمسث">محصول ویژه نیست</option>
                                        <option value="true">محصول ویژه هست</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            <div class="card">
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="file-field input-field">
                                    <div class="btn">
                                        <span>تصویر کاور محصول</span>
                                        <input type="file" name="Images" accept="image/*">
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>توضیح مختصر</label>
                                    <textarea class="form-control" rows="6" asp-for="ShortDescription"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>توضیح کامل</label>
                                    <textarea class="form-control" rows="10" asp-for="FullDescription"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>تعداد نمایش</label>
                                    <input type="number" class="form-control" asp-for="ShowCount" placeholder="نام محصول">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>تعداد </label>
                                    <input type="number" class="form-control" asp-for="Count" placeholder="نام محصول">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>وزن </label>
                                            <input type="number" class="form-control" asp-for="Weight" placeholder="وزن محصول">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>ارتفاع </label>
                                            <input type="number" class="form-control" asp-for="Height" placeholder="ارتفاع محصول">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>عرض </label>
                                            <input type="number" class="form-control" asp-for="Width" placeholder="عرض محصول">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>طول </label>
                                            <input type="number" class="form-control" asp-for="Length" placeholder="طول محصول">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-between p-2">
                                <button type="submit" class="btn bg-green waves-effect"><i class="fa fa-save"></i>&nbsp;ذخبره</button>
                                <a href="/admin/product/index" class="btn bg-grey waves-effect"><i class="fa fa-list"></i>&nbsp;لیست محصولات</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" type="text/css" href="~/lib/select2/dist/css/select2.min.css">
    <script src="~/lib/select2/dist/js/select2.full.min.js"></script>
    <script src="~/lib/nicEdit/nicejs.js" type="text/javascript"></script>
    <script type="text/javascript">
        bkLib.onDomLoaded(nicEditors.allTextAreas);
        $(".select2").select2();
    </script>
}