@model IEnumerable<Ayda.Ecommerce.ShareModels.Menu.SubMenuDto>
@{
    ViewData["Title"] = "مدیریت زیرمنو";
}
<partial name="_Notification" />
<div class="block-header">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <ul class="breadcrumb breadcrumb-style ">
                <li class="breadcrumb-item">
                    <h4 class="page-title">لیست  زیرمنو</h4>
                </li>
                <li class="breadcrumb-item bcrumb-1">
                    <a href="/admin/home/index">
                        <i class="fas fa-home"></i> خانه
                    </a>
                </li>
                <li class="breadcrumb-item bcrumb-2">
                    <a href="/admin/category/index">@ViewData["Title"]</a>
                </li>
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ul>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body table-responsive">
                @if (Model.Count() < 1) {
                    <p>زیر منو برای نمایش وجود ندارد</p>

                } else {
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>دسته بندی</th>
                                <th><i class="fa fa-toolbox"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model) {
                                <tr>
                                    <th scope="row">@p.Id</th>
                                    <td>
                                        @p.Title
                                    </td>
                                    <td>@p.Category.Name</td>
                                    <td>
                                        <div>
                                            <button onclick="UpdateBannerModal('@p.Id')" class="btn bg-cyan  waves-effect btn-sm"><i class="fa fa-edit"></i></button>
                                            <button onclick="DeleteBanner('@p.Id','@p.Title')" class="btn bg-red waves-effect btn-sm"><i class="fa fa-trash"></i></button>
                                           
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>